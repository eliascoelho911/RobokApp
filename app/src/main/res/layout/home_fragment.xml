<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.github.eliascoelho911.robok.ui.widgets.CameraPreview
            android:id="@+id/camera"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
            android:id="@+id/crop_area"
            android:layout_gravity="center"
            android:layout_width="@dimen/box_highlight_size"
            android:layout_height="@dimen/box_highlight_size"
            android:src="@drawable/outline_dash_square_rounded"
            app:layout_constraintTop_toTopOf="@id/camera"
            app:layout_constraintStart_toStartOf="@id/camera"
            app:layout_constraintBottom_toBottomOf="@id/camera"
            app:layout_constraintEnd_toEndOf="@id/camera" />

    <View
            android:id="@+id/fade"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/black_50"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    <com.github.eliascoelho911.robok.ui.widgets.RubikCubeSidePreview
            android:id="@+id/rubik_cube_side_preview"
            android:layout_width="@dimen/box_highlight_size"
            android:layout_height="@dimen/box_highlight_size"
            app:layout_constraintTop_toTopOf="@id/camera"
            app:layout_constraintStart_toStartOf="@id/camera"
            app:layout_constraintBottom_toBottomOf="@id/camera"
            app:layout_constraintEnd_toEndOf="@id/camera" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera_24dp"
            app:tint="@color/white"
            android:contentDescription="@string/speech_capture"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginBottom="24dp"
            android:tooltipText="@string/speech_capture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_replay_24"
            app:tint="@color/white"
            android:backgroundTint="@color/blue_a400"
            android:contentDescription="@string/speech_retry"
            android:visibility="gone"
            tools:visibility="visible"
            android:tooltipText="@string/speech_retry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/fab_ok"
            app:layout_constraintEnd_toStartOf="@id/fab_ok" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_check_24"
            app:tint="@color/white"
            android:contentDescription="@string/speech_ok"
            android:visibility="gone"
            tools:visibility="visible"
            android:tooltipText="@string/speech_ok"
            android:layout_marginBottom="24dp"
            app:layout_constraintStart_toEndOf="@id/fab_retry"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>