<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Robok" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/green_a400</item>
        <item name="colorPrimaryVariant">@color/green_a700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue_a400</item>
        <item name="colorSecondaryVariant">@color/blue_a700</item>
        <item name="colorOnSecondary">@color/purple_1E0E28</item>
        <item name="colorBackground">@color/purple_1E0E28</item>
        <item name="colorBackgroundVariant">@color/purple_120619</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:windowBackground">?attr/colorBackground</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorBackgroundVariant</item>
        <item name="android:navigationBarColor">?attr/colorBackgroundVariant</item>
    </style>
    
    <style name="Theme.Robok.TextStyle.H6" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Theme.Robok.TextStyle.H4" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Theme.Robok.TextStyle.Body" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
</resources>